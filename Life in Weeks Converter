//Second Version:

function lifeInWeeks(age) {

    var yearsRemaining = 90-age;
    var days = yearsRemaining*365;
    var weeks = yearsRemaining*52;
    var months = yearsRemaining*12;

    console.log("You are " + age + " years old currently. You have " + days + " days, " + weeks + " weeks, and " + months + " months left." )

    }



//First Version:

function lifeInWeeks(age) {
    
 //initial values 
 var daysOf90Yrs = 90*365;
 var weeksOf90Yrs = 90*56;
 var monthsOf90Yrs = 90*12;

//output values
 var daysLeft = daysOf90Yrs - (age*365);
 var weeksLeft = weeksOf90Yrs - (age*52);
 var monthsLeft = monthsOf90Yrs - (age*12);
 
 //final equation
console.log("You are " + age + " years old currently. You have " + daysLeft + " days, " + weeksLeft + " weeks, and " + monthsLeft + " months left." )

}

lifeInWeeks();
